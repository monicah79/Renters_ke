<h1>New Comment</h1>

<%= form_with model: @comment, url: new_user_comment, class: "form", local: true do |form| %>
  <div class="form-input">
    <%= form.text_area :text, required: true, class: "form_text", placeholder: "Add a comment..." %>
  </div>
  <%= form.submit "Post", class: "form_button" %>
<% end %>