<h1 class="head-comment">Comments</h1>
<%= form_with model: @comment, url: new_user_comment_path(user_id: @user.id), class: "form", local: true do |form| %>
  <div class="form-input">
  <%= form.text_area :text, required: true, class: "form_text ", placeholder: "Add a comment..." %>
</div>
<div class='submit-btn'>
  <%= form.submit "Submit comment"%>
</div>
<% end %>
<button class="back"><%= link_to 'Back to posts', user_path(@user.id) %></button>
</div>

