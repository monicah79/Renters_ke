<h1 class="Head">Shows the details of posts for a given user<h1>

  <section class='section-container'>
  <div class='user'>
    <div class='profile-div'>
      <% if @user && @user.photo %>
        <div class='profile-photo'><%= @user.photo %></div>
      <% else %>
        <div class='default-photo'>Default photo</div>
      <% end %>
    </div>
    <div class='user_name'>
      <% if @user %>
        <h2><%= @user.name %></h2>
      <% else %>
        <h2>Unknown user</h2>
      <% end %>
    </div>
  </div>
</section>

  <section class="posts_container">
    <% if @recent_posts.present? %>
      <% @recent_posts.each_with_index do |post, index| %>
        <div class="post">
          <h3>Post #<%= index+1 %></h3>
          <p class="post_text"><%= post.text %></p>
          <p class="comments_likes">
            Comments: <%= post.comments_counter %>,
            Likes: <%= post.likes_counter %>
          </p>
        </div>
      <% end %>
    <% else %>
      <p class='no-recent'> No recent posts.</p>
    <% end %>
  </section>

  <div class="post">
  <h4>Comments:</h4>
  <% if @post_comments %>
    <% @post_comments.each do |comment| %>
      <ul>
        <% if comment.post_id === post.id %>
          <li><%= comment.user.name %>: <%= comment.text %></li>
        <% end %>
      </ul>
    <% end %>
  <% else %>
    <p>No comments yet.</p>
  <% end %>
</div>
  <br>
      
  <button class="all_posts">
    Next
  </button>
</div>

</section>
